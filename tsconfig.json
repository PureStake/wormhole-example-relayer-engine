{
  "compilerOptions": {
    "outDir": "relayer-engine/lib",
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": [
      "es2019"
    ],
    "declaration": true,
    "skipLibCheck": true,
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "sourceMap": true
  },
  "include": [
    "relayer-engine/src"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}